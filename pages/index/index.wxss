/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.centered {
  margin: auto;
  text-align: center;
  margin-top: 200px;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.progress-title {
  text-align: center;
  font-size: 10px;
  color: #aaa;
  margin-bottom:6px;
}
.usermotto {
  margin-top: 100px;
}
.progress {
  margin-left:30px;
  margin-right:30px;
  margin-bottom:10px;
}
.grid-row {
  margin:1px;
  text-align: center;
  height:16px;
}
.grid-cell {
  display: inline-block;
  margin: 2px;
  font-size: 7px;
  vertical-align: middle;
}

.cell-passed {
  width: 100%;
  height:100%;
  background-color:#1AAD16;
  border-radius: 20px;
}
.mood-dot {
  display: inline-block;
  width: 10px;
  height:10px;
  margin:2px 26px;
  border-radius: 20px;
}
.cell-mood1{
  background-color:#1AAD16;
}
.cell-mood2{
  background-color:aquamarine;
}
.cell-mood3{
  background-color:azure;
}
.cell-mood4 {
  background-color:bisque;
}
.cell-mood5 {
  background-color:gold;
}
.cell-future {
  width: 100%;
  height:100%;
  background-color:beige;
  border-radius: 20px;
}
.editor {
  text-align:center;
  background-color: #eee;
  position: fixed;
  opacity:0;
}

.editor-title{
  background-color: white;
  padding: 20px;
  border-bottom: 1px solid #ccc;
  font-weight: bold; 
  font-size: 120%
}

.section{
  margin: 15px 0;
}
.section-title{
  font-family:'Times New Roman', Times, serif;
}

.section-body {
  background: white;
  margin-top:8px;
  padding:10px;
}

.item{
  flex-direction: row;
}

.editor-button{
  display: inline-block;
  margin:10px;
  width: 40%;
}