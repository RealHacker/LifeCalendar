/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}

.grid-row {
  margin:1px;
  text-align: center;
}
.grid-cell {
  display: inline-block;
  margin: 2px;
  font-size: 8px;
}
.cell {
  width: 100%;
  height:100%;
}
.editor {
  text-align:center;
  background-color: antiquewhite;
  position: fixed;
  opacity:0;
}